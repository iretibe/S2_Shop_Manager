<div class="col">
    <div class="card rounded-3 employee-card">
        <div class="card-header py-3">
            <h4>@GetEmployeeCard.FirstName @GetEmployeeCard.LastName</h4>
        </div>
        <div class="card-body employee-card text-center">
            <div class="mb-3">
                @* <img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{GetEmployeeCard.EmployeeId}-small.jpg")" class="employee-img rounded-circle img-fluid" /> *@
                <img src="@GetEmployeeCard.ImageName" class="employee-img rounded-circle img-fluid" />
            </div>

            <a href="@($"employeedetail/{GetEmployeeCard.EmployeeId}")" class="btn btn-outline-primary btn-sm mb-1">Full Details</a>

            <button class="btn btn-primary btn-sm mb-1" @onclick="@(async () => await EmployeeQuickViewClicked.InvokeAsync(GetEmployeeCard))">
                Quick View
            </button>

            <a href="@($"editemployee/{GetEmployeeCard.EmployeeId}")" id="detailnavlink" class="btn btn-outline-primary btn-sm mb-1">Edit Employee</a>
        </div>
    </div>
</div>